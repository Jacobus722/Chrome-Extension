{
"update_url": "https://clients2.google.com/service/update2/crx",

    "content_scripts": [
        {
            "js": [ "lib/jq/jquery-2.1.1.min.js", "lib/ga/analytics.js", "rnet/rnet.js", "rnet/options/Rainbow.js", "rnet/Rainbow.js"],
            "matches": [ "http://*/*", "https://*/*", "https://github.com/*/issues/*", "https://github.com/*/pull/*" ]
        }
    ],
  "background": {
    "scripts": [ "rnet/bg.js", "lib/big/bg.js", "rnet/background.js" ],
    "persistent": true
    },
    "description": "__MSG_appDesc__",
    "default_locale":"en", 
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "short_name": "__MSG_appName__",
    "version": "1.0",
    "default_locale": "en",
    "icons": { "128": "rnet/logo128.png", "16": "rnet/logo16.png" },
    "permissions": [
        "storage",
        "tabs",
        "contextMenus",
        "webRequest",
        "<all_urls>",

        "http://*/*",
        "https://*/*",
        "webNavigation",
        "webRequestBlocking",
        "cookies",
        "storage",
        "unlimitedStorage",
		"https://github.com/*/issues/*",
		"https://github.com/*/pull/*"
    ],
    "options_page": "rnet/options/options.html",
    "options_ui": {
        "page": "rnet/options/options.html",
        "chrome_style": true
    },
    "content_security_policy": "script-src 'self'; object-src 'self'"
    
}
